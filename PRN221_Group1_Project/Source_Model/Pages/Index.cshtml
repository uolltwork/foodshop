<body>
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h4 mb-0 text-gray-800">Dashboard</h1>
    </div>
    <h4 class="fs-md mb-2 text-gray-800">1. Toast message</h4>
    <div class="row">
        <div class="col-sm-12">
            <div class="wrapper">
                <button class="btn bg-success">Click to show success</button>
                <button class="btn bg-warning">Click to show warning</button>
                <button class="btn bg-error">Click to show error</button>
            </div>
            <div class="toast-wrapper"></div>
        </div>
    </div>
    <h4 class="fs-md mb-2 text-gray-800 mt-5">2. Data box</h4>
    <div class="row">
        <!-- Earnings (Monthly) Card Example -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-main shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold main-color text-uppercase mb-1">
                                Data 1
                            </div>
