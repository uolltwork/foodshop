@page
@model G1Food_Admin.Pages.Product.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>ProductResponse</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductResponse.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductResponse.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductResponse.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductResponse.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductResponse.Price)
        </dt>
        <dd class="col-sm-10">
            <div>@string.Format("{0:N0} VND", Model.ProductResponse.Price)</div>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductResponse.SalePercent)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductResponse.SalePercent)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductResponse.Image)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.ProductResponse.Image" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductResponse.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductResponse.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductResponse.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductResponse.Category)
        </dd>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.ProductResponse?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
