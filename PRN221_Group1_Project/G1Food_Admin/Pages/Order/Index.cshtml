@page
@model G1Food_Admin.Pages.Order.IndexModel

@{
    ViewData["Title"] = "Manage Order";
}
<head>
    <link rel="stylesheet" href="~/css/formDetail.css" type="text/css" asp-append-version="true"></link>
</head>
<div class="wrapper">
    <div class="row">
        <div class="col-sm-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold main-color">
                        Manage Order
                    </h6>
                </div>
                <div class="card-body">
                    <div class="">
                        <table class="table text-center table-bordered db-table table-hover"
                               id="dataTable"
                               width="100%"
                               cellspacing="0">
                            <thead>
                                <tr>
                                    <th>No.</th>
                                    <th>Name</th>
                                    <th>Status</th>
                                    <th>Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int index = 1;
                                }
                                @if (Model.Orders != null)
                                {
                                    @foreach (var item in Model.Orders)
                                    {
                                        <tr>
                                            <td class="align-middle id">@index</td>
                                            <td class="align-middle name">@item.Username</td>
                                            <td class="align-middle img">@item.Status </td>
                                            <td class="align-middle category">@item.Date</td>
                                            <td class="align-middle">
                                                <a asp-page="./Details" asp-route-id="@item.Id">Details</a>
                                            </td>
                                        </tr>
                                        index++;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>