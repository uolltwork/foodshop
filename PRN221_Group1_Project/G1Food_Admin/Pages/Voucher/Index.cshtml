@page
@model G1Food_Admin.Pages.Voucher.IndexModel

@{
    ViewData["Title"] = "Manage Voucher";
}
<head>
    <link rel="stylesheet" href="~/css/formDetail.css" type="text/css" asp-append-version="true"></link>
</head>
<div class="wrapper">
    <div class="row">
        <div class="col-sm-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold main-color">
                        Manage Product
                    </h6>
                    <div class=" d-flex justify-content-between align-items-center">
                        <div>
                            <span>Total product: </span>
                            <span class="btn bg-primary">@Model.Vouchers.Count</span>
                        </div>
                        <form method="get">
                            <button type="submit" asp-page="./Create" class="btn bg-success btn-add ml-4">
                                <i class="fa-solid fa-plus"></i> Add new
                            </button>
                        </form>
                    </div>
                </div>
                <div class="card-body">
                    <div class="">
                        <table class="table text-center table-bordered db-table table-hover"
                               id="dataTable"
                               width="100%"
                               cellspacing="0">
                            <thead>
                                <tr>
                                    <th>No.</th>
                                    <th>Code</th>
                                    <th>Quantity</th>
                                    <th>Discount</th>
                                    <th>Description</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int index = 1;
                                }
                                @if (Model.Vouchers != null)
                                {
                                    @foreach (var item in Model.Vouchers)
                                    {
                                        <tr>
                                            <td class="align-middle ">@index</td>
                                            <td class="align-middle ">@item.Code</td>
                                            <td class="align-middle ">@item.Quantity</td>
                                            <td class="align-middle ">@item.SalePercent</td>
                                            <td class="align-middle ">@item.Description</td>
                                            <td class="align-middle ">@item.Status</td>
                                            <td class="align-middle">
                                                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                                            </td>
                                        </tr>
                                        index++;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>