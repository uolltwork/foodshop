@page
@model G1Food_Admin.Pages.Voucher.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Voucher</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="id" value="@Model.VoucherResponse.Id" />
            <div class="form-group">
                <label asp-for="Voucher.Code" class="control-label"></label>
                <input asp-for="Voucher.Code" class="form-control" />
                <span asp-validation-for="Voucher.Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Voucher.Quantity" class="control-label"></label>
                <input asp-for="Voucher.Quantity" class="form-control" />
                <span asp-validation-for="Voucher.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Voucher.SalePercent" class="control-label"></label>
                <input asp-for="Voucher.SalePercent" class="form-control" />
                <span asp-validation-for="Voucher.SalePercent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Voucher.Description" class="control-label"></label>
                <input asp-for="Voucher.Description" class="form-control" />
                <span asp-validation-for="Voucher.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Voucher.StatusId" class="control-label"></label>
                <select class="form-input" asp-for="Voucher.StatusId" asp-items="Model.Status.Select(w => new SelectListItem { Text = w.Name, Value = w.Id.ToString() })">
                </select>
                <span asp-validation-for="Voucher.StatusId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
