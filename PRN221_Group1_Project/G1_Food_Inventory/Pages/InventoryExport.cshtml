@page
@model InventoryExportModel
@{
    ViewData["Title"] = "Inventory Export";
}

<div>
    <div class="row mt-4">
        <!-- DataTales Example -->
        <div class="col-sm-12">
            <div class="card mb-4 px-4  py-2">
                <div>
                    <h3>
                        Inventory Export
                    </h3>
                    <div class="">

                        <form method="post">
                            <div class="row">
                                <div class="col-1 d-flex align-items-center mr-4">
                                    <div>
                                        Item
                                    </div>
                                </div>
                                <div class="col-4">
                                    <select asp-for="SelectedWarehouse" asp-items="Model.Warehouses.Select(w => new SelectListItem { Text = w.ItemName, Value = w.WarehouseItemId.ToString() })">
                                    </select>
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-1 d-flex align-items-center mr-4">
                                    <div class="mb-3">
                                        Quantity
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="form-group">
                                        <input asp-for="Quantity" class="form-control" placeholder="Quantity" />
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-1 d-flex align-items-center mr-4">
                                    <div class="mb-3">
                                    </div>
                                </div>
                                <div class="col-4">
                                    <button type="submit" class="btn bg-success">Add Quantity</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>